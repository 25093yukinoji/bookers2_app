<h1>Editing Book</h1>
<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
<% end %>
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_field :body %>
  <%= f.submit 'Update Book' %>
<% end %>
<%= link_to "Show", book_path(@book) %>
|
<p><a href="/books">Back</a></p>