<head>
  <title>WebcampBackendNew</title>
</head>


  <p id="notice"></p>
  <h1 >Books</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Opinion</th>
        <th></th>
      </tr>
    </thead>
   <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= book.title %>
        </td>
        <td>
          <%= book.body %>
        </td>
        <td>
          <%= link_to "show", book_path(book.id) %>
          <%= link_to "edit", edit_user_path(book.id) %>
          <%= link_to "destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


  <h2>New book</h2>
  <% if @book.errors.any? %>
  <%= @book.errors.count %>errors
  <% @book.errors.full_messages.each do |message| %>
  <%= message %>
  <% end %>
  <% end %>
  <%= form_for(@book) do |f| %>

  <p class="index-title">Title</p>
  <%=f.text_field :title %>

  <p class="index-body">Body</p>
  <%= f.text_area :body %>

  <br><%= f.submit 'Create Book' %></br>
  <% end %>
  <%= paginate @books %>
